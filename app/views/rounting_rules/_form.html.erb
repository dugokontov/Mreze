    <%= f.label :protocol_out %><br />
    <%= f.select :protocol_out, Interface::PROTOCOLS,
                  :prompt => 'Select output protocol' %>
  </div>
  <div class="field">
    <%= f.label :script %><br />
    <%= f.text_area :script %>
