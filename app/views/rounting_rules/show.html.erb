<%- model_class = RountingRule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:scenario_type) %>:</strong></dt>
  <dd><%= @rounting_rule.scenario_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:node_type) %>:</strong></dt>
  <dd><%= @rounting_rule.node_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:protocol_in) %>:</strong></dt>
  <dd><%= @rounting_rule.protocol_in %></dd>
  <dt><strong><%= model_class.human_attribute_name(:protocol_out) %>:</strong></dt>
  <dd><%= @rounting_rule.protocol_out %></dd>
  <dt><strong><%= model_class.human_attribute_name(:script) %>:</strong></dt>
  <dd><pre><%= @rounting_rule.script %></pre></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rounting_rules_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rounting_rule_path(@rounting_rule), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rounting_rule_path(@rounting_rule),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
